    $usuario = $_POST['usuario'] ?? '';
    $senha = $_POST['senha'] ?? '';

    if ($usuario === 'admin' && $senha === '123') {
        $_SESSION['usuario'] = $usuario;
        $mensagem = "Login bem-sucedido!";
        $tipo = "sucesso";
        $link = "produtos.php";
